doctype html
html(
    lang='en',
    ng-app='wedding'
)
    head
        meta(charset='utf-8')
        meta(content='IE=edge', http-equiv='X-UA-Compatible')
        meta(content='width=device-width, initial-scale=1', name='viewport')
        link(rel='shortcut icon', href='favicon.ico', type='image/x-icon')
        link(rel='icon', href='favicon.ico', type='image/x-icon')

        - var TITLE = 'Sarah & Ansel'
        - var DESCRIPTION = 'Ireland 2016'
        - var URL = 'http://SarahAndAnsel.Wedding'
        - var IMG = URL + '/dist/img/background.jpg'

        title #{TITLE}

        meta(name='description'        , content='#{DESCRIPTION}')
        meta(property='fb:app_id'      , content='982424705128938')
        meta(property='og:type'        , content='website')
        meta(property='og:url'         , content='#{URL}')
        meta(property='og:title'       , content='#{TITLE}')
        meta(property='og:image'       , content='#{IMG}')
        meta(property='og:image:width' , content='2500')
        meta(property='og:image:height', content='1694')
        meta(property='og:description' , content='#{DESCRIPTION}')

        link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Josefin+Slab:300')
        // build:css(.) dist/css/SarahAndAnsel.min.css
        // fileblock:css styles
        // endfileblock
        // endbuild

    body(resize-watcher)
        background
        div(ng-cloak, ng-show='isWide')
            h1.c-headline Sarah & Ansel
            h2.c-headline.c-headline--subhead July 26, 2016
        div(ng-cloak, ng-hide='isWide')
            h1.c-headline S & A
            h2.c-headline.c-headline--subhead July 26
        div.c-container
            card

